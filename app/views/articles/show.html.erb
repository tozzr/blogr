<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= markdown @article.text %>
</p>

<p>
  <strong>Slug:</strong>
  <%= @article.slug %>
</p>

<p>
  <strong>Published:</strong>
  <% if @article.published_at == nil %>
    -
  <% elsif %>
    <%= @article.published_at %>
  <% end %>
</p>

