<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "tozzr.com" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <!-- Nav Bar -->

      <div class="row">
        <div class="large-12 columns">
          <% if @user_logged_in %>
            <div class="nav-bar right">
             <ul class="button-group">
               <li><a href="<%= articles_path %>" class="button">articles</a></li>
               <li><a href="<%= users_path %>" class="button">users</a></li>           
             </ul>
            </div>
          <% end %>

          <h1><a href="/">tozzr.com</a></h1>
          <hr />
        </div>
      </div>

    <!-- End Nav -->
    
    <!-- Main Page Content and Sidebar -->

      <div class="row">
        
      <!-- Main Blog Content -->
      <div class="large-9 columns" role="content">
      
        <%= yield %>
    
      </div>

    <!-- End Main Content -->


    <!-- Sidebar -->

      <aside class="large-3 columns">
        <% if defined?(@navi_items) and @navi_items.any? %> 
        <h5>articles</h5>
        <ul class="side-nav">
          <% @navi_items.each do |i| %>
            <li>
              <a href="/<%= i.slug %>">
                <%= i.title %>
              </a>
            </li>
          <% end %>
        </ul>
        <% end %>
        
        <!-- div class="panel">
          <h5>Featured</h5>
          <p>Pork drumstick turkey dig.</p>
          <a href="#">Read More</a>
        </div-->

      </aside>

      <!-- End Sidebar -->
    </div>

    <!-- End Main Content and Sidebar -->


    <!-- Footer -->

    <footer class="row">
      <div class="large-12 columns">
        <hr />
        <div class="row">
          <div class="large-6 columns">
            <p>&copy; Copyright 2014 tozzr. All rights reserved.</p>
          </div>
          <div class="large-6 columns">
            <ul class="inline-list right">
              <li>
                <% if @user_logged_in %>
                  <a href="/auth/logout">logout</a>
                <% else %>
                  <a href="/auth/login">log in</a>
                <% end %>
            </ul>
          </div>
        </div>
      </div>
    </footer>
    
    <%= javascript_include_tag "application" %>" %>

  </body>
</html>